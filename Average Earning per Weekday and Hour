with cte as (
    select *, (order_total - discount_amount + tip_amount - refunded_amount) as net_order_total
    from doordash_delivery
),
cte1 as (
    select extract(isodow from delivered_to_consumer_datetime) as weekday, extract(hour from delivered_to_consumer_datetime) as hour, *
    from cte
),
cte2 as (
    select weekday, hour, avg(net_order_total) as avg_net_order_total
    from cte1
    group by 1,2
    order by 1,2 
)
select weekday, hour, round((avg_net_order_total::numeric),2)
from cte2;
